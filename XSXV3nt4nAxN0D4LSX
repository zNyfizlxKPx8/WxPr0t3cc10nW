-- Flag para VIP
local isVIP = false  -- Cambiar a true si quieres ocultar la ventana

-- Mostrar ventana modal solo si NO es VIP
if not isVIP then
    modules.corelib.displayInfoBox(titulo, mensaje, subtitulo)
end
